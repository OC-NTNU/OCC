 @article{Pittera_2014, title={Connecting thermal physiology and latitudinal niche partitioning in marine Synechococcus}, volume={8}, ISSN={1751-7370}, url={http://dx.doi.org/10.1038/ismej.2013.228}, DOI={10.1038/ismej.2013.228}, number={6}, journal={ISME J}, publisher={Nature Publishing Group}, author={Pittera, Justine and Humily, Florian and Thorel, Maxine and Grulois, Daphné and Garczarek, Laurence and Six, Christophe}, year={2014}, month={Jun}, pages={1221–1236}}
