        </annotation>
        <annotation id="T23">
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <infon key="brat-id">T23</infon>
          <location length="31" offset="1625"/>
          <text>the extent of nitrate accretion</text>
        </annotation>
        <annotation id="T24">
