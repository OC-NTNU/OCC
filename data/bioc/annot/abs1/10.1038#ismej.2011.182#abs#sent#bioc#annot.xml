      <sentence>
        <infon key="n">7</infon>
        <offset>867</offset>
        <text>N2-fixation was detectable throughout the upper 200 m at most stations, with rates ranging from 0.001 to 0.19 nM N h-1.
</text>
        <annotation id="T13">
          <infon key="brat-id">T13</infon>
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="22" offset="987"/>
          <text>N2-fixation in the SPG</text>
        </annotation>
      </sentence>
      <sentence>
        <infon key="n">8</infon>
        <offset>987</offset>
        <text>N2-fixation in the SPG may account for the production of 8-20% of global oceanic new nitrogen.
</text>
        <annotation id="T10">
          <infon key="brat-id">T10</infon>
          <infon key="type">Cause</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="11" offset="1014"/>
          <text>account for</text>
        </annotation>
        <annotation id="T11">
          <infon key="brat-id">T11</infon>
          <infon key="type">Increase</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="10" offset="1030"/>
          <text>production</text>
        </annotation>
        <annotation id="T12">
          <infon key="brat-id">T12</infon>
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
