        </annotation>
        <annotation id="T7">
          <infon key="brat-id">T7</infon>
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="23" offset="1198"/>
          <text>the precipitation level</text>
        </annotation>
        <annotation id="T8">
          <infon key="brat-id">T8</infon>
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="48" offset="1242"/>
          <text>the terrestrial viral abundance in the reservoir</text>
        </annotation>
        <relation id="E5">
          <infon key="brat-id">E5</infon>
