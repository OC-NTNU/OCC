          <text>remineralized</text>
        </annotation>
        <annotation id="T15">
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <infon key="brat-id">T15</infon>
          <location length="18" offset="1370"/>
          <text>13C-organic carbon</text>
        </annotation>
        <relation id="E8">
