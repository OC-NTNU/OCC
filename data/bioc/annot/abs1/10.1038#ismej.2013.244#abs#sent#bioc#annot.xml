 @article{Robidart_2014, title={Ecogenomic sensor reveals controls on N2-fixing microorganisms in the North Pacific Ocean}, volume={8}, ISSN={1751-7370}, url={http://dx.doi.org/10.1038/ismej.2013.244}, DOI={10.1038/ismej.2013.244}, number={6}, journal={ISME J}, publisher={Nature Publishing Group}, author={Robidart, Julie C and Church, Matthew J and Ryan, John P and Ascani, François and Wilson, Samuel T and Bombar, Deniz and Marin, Roman and Richards, Kelvin J and Karl, David M and Scholin, Christopher A and et al.}, year={2014}, month={Jun}, pages={1175–1185}}
