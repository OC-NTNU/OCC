        </annotation>
        <annotation id="T16">
          <infon key="brat-id">T16</infon>
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="20" offset="969"/>
          <text>the non-toxic strain</text>
        </annotation>
        <annotation id="T17">
          <infon key="brat-id">T17</infon>
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="12" offset="1010"/>
