        </annotation>
        <annotation id="T6">
          <infon key="brat-id">T6</infon>
          <infon key="type">Increase</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="9" offset="1340"/>
          <text>increased</text>
        </annotation>
        <annotation id="T7">
          <infon key="brat-id">T7</infon>
          <infon key="type">Variable</infon>
          <infon key="brat-type">text-bound</infon>
          <location length="27" offset="1431"/>
          <text>molecular weight substrates</text>
        </annotation>
        <annotation id="T8">
          <infon key="brat-id">T8</infon>
